QMenuBar
{
    background-color: #181818;
    color: white;
    border-bottom: 1px solid #2b2b2b;
    padding-left: 15px;
    font: 13px;
}

QMenuBar::item
{
    background-color: #181818;
    color: white;
    border: 1px solid #181818;
    padding-top: 2px;
    padding-bottom: 2px;
    padding-left: 10px;
    padding-right: 10px;
    margin-top: 0px;
    margin-bottom: 0px;
}

QMenuBar::item:selected
{
    background-color: #2b2b2b;
    color: white;
    border: 1px solid #2b2b2b;
}